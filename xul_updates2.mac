searchNodeByTagNameAt: 

call searchNodeByTagName $$1, "alldown";
if (!##return) return 0;

##i = 0;
while (##i < ##2) {
	moveto selendx, selendy;
	call searchNodeByTagName $$1, "down";
	if (!##return) return 0;
	##i = ##i+1;
}

