getElementsByTagName: 

##i = 0;
##tagsIndex = ##tagsIndex + 1;
call getElementByTagName $$1, "alldown", $$2;
while ($$return != "") {
	$getElementsByTagName[##tagsIndex][##i] = $$return;
	##i = ##i+1;
	moveto selendx, selendy;
	call getElementByTagName $$1, "down", $$2;
}
