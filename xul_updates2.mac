$appname = leftstr($appname, strstr($appname, "\\"));
 
//RSS生成：記事を取得 

// タイトル取得
#shouldClose     = 0;
#shouldMoveFocus = 0;
if (strstr($filename, "index.html") < 0) {
	#shouldMoveFocus = 1;
	if (strstr($filename, ".html.en") < 0)
		$openFileName = directory+"\\index.html";
	else
		$openFileName = directory+"\\index.html.en";

	if (findhidemaru($openFileName) == -1) {
		openfile $openFileName;
		#shouldClose = 1;
	}
	else {
		setactivehidemaru findhidemaru($openFileName);
	}
	disabledraw;
}

gofiletop;
searchdown "<h1";
escape;
golinetop2;
#topx = x;
#topy = y;
searchdown "</h1";
escape;
golineend2;
$title = gettext(#topx, #topy, x, y);

call openTempWin;

insert $title;
if (strstr($filename, ".html.en") < 0)
	replaceallfast "\\t+<h1>[- _a-zA-Z0-9]+\\n", "", regular;
replaceallfast "<[^>]+>", "", regular;
replaceallfast "\\t", "", regular;
replaceallfast "\\n", " ", regular;
