call closeTempWin;

if (#shouldMoveFocus == 1) {
	$closeFile = filename;
	setactivehidemaru findhidemaru($filename);
	if (#shouldClose == 1) {
		closehidemaruforced findhidemaru($closeFile);
	}
	disabledraw;
}


