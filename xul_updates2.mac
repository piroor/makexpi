searchNodeByTagName: 

call searchNodeTop "<"+$$1+"( [^>]*[^-]>|>)", $$2;
if (!##return) return 0;

escape;
if ($$3 == "inner") {
	searchdown ">\\n?", regular;
	right;
}
return 1;
 
//----------------------------------------------------------
searchNodeByTagAttr: 

call searchNodeTop "<"+$$1+"( [^>]* | )"+$$2+"=(\".* |\")"+$$3+"( [^\"]*\"[^>]*[^-]|\"[^>]*[^-]|\")>", $$4;
if (!##return) return 0;

escape;
if ($$5 == "inner") {
	searchdown ">\\n?", regular;
	right;
}
return 1;
 
//----------------------------------------------------------
searchNodeByAttr: 

call searchNodeTop "<[^!][^>]* "+$$1+"=(\".* |\")"+$$2+"( [^\"]*\"[^>]*[^-]|\"[^>]*[^-]|\")>", $$3;
