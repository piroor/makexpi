//==========================================================
// 新しいノードを生成する 
//----------------------------------------------------------
	
_createNode: 

$$beforeInnerCR = "";
$$afterInnerCR = "";
$$CR = "";

if ($$4 == "after") {
	$$CR = "\n";
} else if ($$4 == "inner") {
	$$beforeInnerCR = "\n\t";
	$$afterInnerCR = "\n";
	$$CR = "\n";
}

if ($$3 == "<empty>" || $$3 == "<>") return "<"+$$1+" />"+$$CR;
else return "<"+$$1+">"+$$beforeInnerCR+$$3+$$afterInnerCR+"</"+$$2+">"+$$CR;
 
//----------------------------------------------------------
createNode: 

call _createNode $$1, $$1, $$2, $$3;
return $$return;
 
